{
  "compilerOptions": {
    "module": "ES2015",
    "lib": ["dom", "es2015.promise", "es5", "es6"],
    "target": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,

    "outDir": "output/build",
    "rootDir": "src",
    "sourceMap": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "types": [
    "arcgis-js-api"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
