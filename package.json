{
  "name": "@arcgis/cli",
  "version": "4.18.0",
  "description": "CLI to scaffold ArcGIS API for JavaScript applications",
  "main": "dist/index.js",
  "bin": {
    "arcgis": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esri/arcgis-js-cli.git"
  },
  "keywords": [
    "esri",
    "arcgis",
    "cli"
  ],
  "scripts": {
    "prepare": "npm run -s build",
    "clean": "rimraf dist",
    "test": "npm run clean && jest --coverage",
    "build": "npm run clean && npm run tsc && babel src -d dist -D --ignore '*.test.ts,**/__mocks__/'",
    "dev": "npm run clean && npm run build && jest --watch",
    "tsc": "tsc",
    "pretty": "prettier 'src/**/*.ts' --write"
  },
  "files": [
    "dist",
    "templates"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/templates/"
    ]
  },
  "author": "Rene Rubalcava <rrubalcava@esri.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "babel": {
    "comments": false,
    "presets": [
      "@babel/preset-typescript",
      "@babel/preset-env",
      {
        "loose": true,
        "targets": {
          "node": "current"
        },
        "exclude": [
          "transform-regenerator"
        ]
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-empty-function": 0
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "lodash.camelcase": "^4.3.0",
    "lodash.startcase": "^4.4.0",
    "ora": "^5.1.0",
    "ramda": "^0.27.1",
    "rimraf": "^3.0.2",
    "yargs": "^15.4.1"
  }
}
